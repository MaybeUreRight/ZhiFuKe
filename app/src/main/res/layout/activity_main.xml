<com.weilay.pos.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/hexiao_iv"
            android:layout_margin="2dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.5%"
            android:scaleType="fitXY"
            android:background="@drawable/but_select_blue"
            android:src="@drawable/icon_hexiao" />

        <ImageView
            android:id="@+id/zhifu_iv"
            android:layout_width="0dp"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/hexiao_iv"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="50%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_pay" />

        <ImageView
            android:id="@+id/jifen_iv"
            android:layout_below="@+id/hexiao_iv"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.5%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_member" />

        <ImageView
            android:id="@+id/task_iv"
            android:layout_below="@+id/hexiao_iv"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/jifen_iv"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.5%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_task"  />

        <ImageView
            android:id="@+id/sendticket_iv"
            android:layout_below="@+id/jifen_iv"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.5%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_send_card" />

        <ImageView
            android:id="@+id/gengduo_iv"
            android:layout_below="@+id/jifen_iv"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            android:layout_toRightOf="@+id/sendticket_iv"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.5%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_more" />
    </com.weilay.pos.percent.PercentRelativeLayout>

</com.weilay.pos.percent.PercentRelativeLayout>