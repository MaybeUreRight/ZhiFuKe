<?xml version="1.0" encoding="utf-8"?>
<com.weilay.pos.percent.PercentRelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        app:layout_heightPercent="14%"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <ImageView
            android:id="@+id/ipaddress_iv"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_widthPercent="35%"
            android:src="@drawable/ipaddress" />

        <EditText
            android:id="@+id/ipaddress_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ipaddress_iv"
            android:gravity="center"
            android:text=""
            android:textSize="25sp" />
    </com.weilay.pos.percent.PercentRelativeLayout>

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_1"
        app:layout_heightPercent="14%" >

        <ImageView
            android:id="@+id/netmask_iv"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_widthPercent="35%"
            android:src="@drawable/netmask" />

        <EditText
            android:id="@+id/netmask_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/netmask_iv"
            android:gravity="center"
            android:text=""
            android:textSize="25sp" />
    </com.weilay.pos.percent.PercentRelativeLayout>

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_2"
        app:layout_heightPercent="14%" >

        <ImageView
            android:id="@+id/gateway_iv"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_widthPercent="35%"
            android:src="@drawable/gateway" />

        <EditText
            android:id="@+id/gateway_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/gateway_iv"
            android:gravity="center"
            android:text=""
            android:textSize="25sp" />
    </com.weilay.pos.percent.PercentRelativeLayout>

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_3"
        app:layout_heightPercent="16%" >

        <ImageView
            android:id="@+id/dns1_iv"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_widthPercent="35%"
            android:src="@drawable/dns1" />

        <EditText
            android:id="@+id/dns1_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/dns1_iv"
            android:gravity="center"
            android:text=""
            android:textSize="25sp" />
    </com.weilay.pos.percent.PercentRelativeLayout>

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_5"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_4"
        app:layout_heightPercent="14%" >

        <ImageView
            android:id="@+id/dns2_iv"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:layout_widthPercent="35%"
            android:src="@drawable/dns2" />

        <EditText
            android:id="@+id/dns2_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/dns2_iv"
            android:gravity="center"
            android:hint=""
            android:textSize="25sp" />
    </com.weilay.pos.percent.PercentRelativeLayout>

    <ImageView
        android:id="@+id/save_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_5"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/save_ip" />

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboard_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/btn_keyboard_key"
        android:keyTextColor="@color/black"
        android:shadowColor="@color/black"
        android:shadowRadius="0.0"
        android:visibility="gone" />

</com.weilay.pos.percent.PercentRelativeLayout>