<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.weilay.pos.percent.PercentLinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/wired_network"
            android:layout_margin="3dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49%"
            android:scaleType="fitXY"
            android:src="@drawable/wirednetwork_notselect" />

        <ImageView
            android:id="@+id/wifi_network"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49%"
            android:scaleType="fitXY"
            android:src="@drawable/wifi_notselect" />
    </com.weilay.pos.percent.PercentLinearLayout>

</RelativeLayout>