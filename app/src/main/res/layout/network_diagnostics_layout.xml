<?xml version="1.0" encoding="utf-8"?>
<com.weilay.pos.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/test_network"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            app:layout_heightPercent="11%"
            android:background="@drawable/round_red"
            android:gravity="center"
            android:text="开始诊断"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <ScrollView
            android:id="@+id/scroll_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/test_network" >

            <TextView
                android:id="@+id/network_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="false"
                android:scrollbars="vertical"
                android:singleLine="false"
                android:textSize="25sp" />
        </ScrollView>
    </com.weilay.pos.percent.PercentRelativeLayout>

</com.weilay.pos.percent.PercentRelativeLayout>