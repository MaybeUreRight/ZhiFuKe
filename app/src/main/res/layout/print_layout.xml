<com.weilay.pos.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.weilay.pos.percent.PercentRelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/jiezhang_iv"
            android:layout_margin="3dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_checkout" />

        <ImageView
            android:id="@+id/mendian_iv"
            android:layout_width="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/jiezhang_iv"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.9%"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:src="@drawable/icon_shop_record" />

        <ImageView
            android:id="@+id/jiaobanjilu_iv"
            android:layout_below="@+id/jiezhang_iv"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_shift_record" />

        <ImageView
            android:id="@+id/hexiaodang_iv"
            android:layout_below="@+id/jiezhang_iv"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@+id/jiaobanjilu_iv"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49.9%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_check_order" />

        <ImageView
            android:id="@+id/tuikuan_iv"
          android:layout_toRightOf="@+id/mendian_iv"
            android:layout_marginBottom="3dp"
          android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            app:layout_heightPercent="33%"
            app:layout_widthPercent="49%"
            android:scaleType="fitXY"
            android:src="@drawable/icon_refund_record" />

       
    </com.weilay.pos.percent.PercentRelativeLayout>

</com.weilay.pos.percent.PercentRelativeLayout>