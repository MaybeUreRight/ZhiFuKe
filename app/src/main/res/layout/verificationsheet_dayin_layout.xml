<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >

            <TextView
                android:id="@+id/hexiaodang_dayin_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-4-8 星期五"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_1"
            android:layout_margin="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="设备编码:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/hexiaodan_dayin_sn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="25sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_2"
            android:layout_margin="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="核销单号:"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/hexiaodan_dayin_danhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_3"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp" >
        </RelativeLayout>

        <View
            android:id="@+id/view_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/rl_4"
            android:layout_margin="10dp"
            android:background="@color/black" />

        <com.weilay.pos.percent.PercentLinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_view"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/hexiaodan_but_dayin"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/view_view"
                android:layout_margin="10dp"
                android:background="@drawable/but_select_blue"
                android:gravity="center"
                android:text="打印"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/hexiaodan_but_cancel"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_below="@+id/hexiaodan_but_dayin"
                android:layout_margin="10dp"
                android:background="@drawable/but_select_red"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="35sp" />
        </com.weilay.pos.percent.PercentLinearLayout>
    </RelativeLayout>

</RelativeLayout>